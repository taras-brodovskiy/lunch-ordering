<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: orders_path, method: "get", local: true) do %>
      <%= select("order", "order_date", all_dates.collect{|date| [date, date]}, {},
          { class: 'form-control' }) %>
      <%= submit_tag("Go", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>
