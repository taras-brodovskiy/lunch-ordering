<% provide(:title, 'Orders') %>
<% if current_user.admin? %>
  <h1>Orders index</h1>
<% else %>
  <h1>My orders</h1>
<% end %>

<% if @orders %>
  <% if current_user.admin? %>
    <h2 id="orders_count">Total orders for <%= @orders_date %>: <%= @orders.count %></h2>
    <h2 id="orders_price">Total price: <%= total_price_for_date %></h2>
    <%= render 'date_form' %>
    <h2>Orders list:</h2>
  <% else %>
    <%= render 'date_form' %>
    <h2 id="orders_count">Order for: <%= @orders_date %></h2>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= will_paginate @orders %>
      <ul class="list-group">
        <%= render @orders %>
      </ul>
      <%= will_paginate @orders %>
    </div>
  </div>
<% else %>
  <h2 id="no_orders">Total orders: 0</h2>
<% end %>
