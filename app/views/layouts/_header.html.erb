  <div class="container">
  <%= link_to "lunch ordering", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Menu <b class="caret"></b>
              </a>
              <ul class="dropdown_menu">
                <li><%= link_to "Show menu", last_menu %></li>
                <li><%= link_to "Edit today menu", new_menu_path %></li>
              </ul>
            </li>
            <li><%= link_to "Orders", orders_path %></li>
            <li><%= link_to "Items", items_path %></li>
            <li><%= link_to "Users", users_path %></li>          
          <% else %>
            <li><%= link_to "Menu", last_menu %></li>
            <li><%= link_to "My orders", orders_path %></li>
          <% end %>
