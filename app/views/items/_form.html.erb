<%= form_with(url: items_path, method: "get", local: true) do %>
  <%= label_tag(:item_kind, "Item's kind:") %><br>
  <%= select_tag "item_kind", options_for_select([["First courses", "first"], ["Main courses", "main"], ["Drinks", "drink"]], "First_courses"),
                name: 'item[kind]'
  %>
  <%= submit_tag("Search") %>
<% end %>

<br>

<%= form_for(@item) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :kind %>
  <%=
    select_tag "item_kind", options_for_select([["First courses", "first"], ["Main courses", "main"], ["Drinks", "drink"]], "First_courses"),
                name: 'item[kind]'
  %><br>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :price %>
  <%= f.text_field :price %><br>

  <%= f.label :photo %>
  <%= f.file_field :photo, accept: 'image/png,image/jpeg,image/gif' %><br>

  <%= f.submit yield(:button_text) %>
<% end %>
