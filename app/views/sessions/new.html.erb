<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<%= form_for(:session, url: signin_path) do |f| %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do %>
  <%= f.check_box :remember_me %>
  <span>Remember me on this computer</span>
  <% end %>

  <%= f.submit "Sign in" %>
<% end %>
